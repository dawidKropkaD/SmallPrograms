@model SmallPrograms.Areas.DataMining.ViewModels.PerceptronViewModel
@{
    ViewBag.Title = "Perceptron";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Perceptron</h2>

@using(Html.BeginForm("Perceptron", "Programs", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(null, new { @class = "alert-danger" })

    <table>
        <tr>
            <td>@Html.LabelFor(n => n.NumberOfExamplesInTrainingSet)</td>
            <td>@Html.TextBox("NumberOfExamplesInTrainingSet", "", new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(t => t.Threshold)</td>
            <td>@Html.TextBox("Threshold", "", new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(l => l.LearningRate)</td>
            <td>@Html.TextBox("LearningRate", "", new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.MaxIterationNumberInDeltaRule)</td>
            <td>@Html.TextBox("MaxIterationNumberInDeltaRule", "", new { @class = "form-control" })</td>
        <tr>
            <td><input type="submit" class="btn btn-default" name="btnSubmit" value="Oblicz wagi" /></td>
        </tr>
    </table>
    <br /><br />

    <div id="result" style="@(Model.DisplayResult ? "display:inline" : "display:none")">
        <table>
            <tr>
                <td>@Html.LabelFor(w => w.WeightVector)</td>
                <td>@Html.DisplayFor(w => w.WeightVector[0])<text>,</text> @Html.DisplayFor(w => w.WeightVector[1])</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(t => t.NewThreshold)</td>
                <td>@Html.DisplayFor(m => m.NewThreshold)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(n => n.IterationNumberInDeltaRule)</td>
                <td>@Html.DisplayFor(n => n.IterationNumberInDeltaRule)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.XCoordinate)</td>
                <td>@Html.TextBoxFor(m => m.XCoordinate, new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.YCoordinate)</td>
                <td>@Html.TextBox("YCoordinate", "0", new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td><input type="submit" class="btn btn-default" name="btnSubmit" value="OK" /></td>
            </tr>
        </table>
    </div>
}
